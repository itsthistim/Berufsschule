    }

    .register .login-form .loading {
        background: #fff;
        text-align: center;
        padding: 15px;
    }

    .register .login-form .loading:before {
        content: '';
        display: inline-block;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        margin: 0 10px -6px 0;
        border: 3px solid #18d26e;
        border-top-color: #eee;
        animation: animate-loading 1s linear infinite;
    }

    .register .login-form input,
    .register .login-form textarea {
        border-radius: 0;
        box-shadow: none;
        font-size: 14px;
    }

    .register .login-form input:focus,
    .register .login-form textarea:focus {
        border-color: #e43c5c;
    }

    .register .login-form input {
        height: 44px;
    }

    .register .login-form textarea {
        padding: 10px 12px;
    }

    .register .login-form button {
        background: #e43c5c;
        border: 0;
        padding: 10px 28px;
        color: #fff;
        transition: 0.4s;
        border-radius: 50px;
    }

    .register .login-form button:hover {
        background: #d01d3f;
    }

    @keyframes animate-loading {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>
